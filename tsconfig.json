{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}
